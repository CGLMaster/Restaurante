package Negocio.Pedido;

public class TLineaPedido {

	private int id_pedido;

	private int id_plato;

	private Double precio;

	private int cantidad;
	
	public TLineaPedido(){
		this.precio=0.0;
	}
	
	public TLineaPedido(int id_plato, int cantidad){
		this.id_plato=id_plato;
		this.cantidad=cantidad;
	}
	
	public TLineaPedido(int id_plato, int cantidad, Double precio){
		this.id_plato=id_plato;
		this.cantidad=cantidad;
		this.precio=precio;
	}
	
	public TLineaPedido(int id_pedido, int id_plato, Double precio, int cantidad) {
		super();
		this.id_pedido = id_pedido;
		this.id_plato = id_plato;
		this.precio = precio;
		this.cantidad = cantidad;
	}

	public void setCantidad(int cantidad) {
		this.cantidad=cantidad;
	}
	
	public void setIdPedido(int id_pedido) {
		this.id_pedido=id_pedido;
	}
	
	public void setPlato(int id_plato) {
		this.id_plato=id_plato;
	}
	
	public void setPrecio(double precio) {
		this.precio=precio;
	}
	
	public int getCantidad() {
		return cantidad;
	}
	
	public int getIdPedido() {
		return id_pedido;
	}
	
	public int getIdtPlato() {
		return id_plato;
	}
	
	public double getPrecio() {
		return precio;
	}
}